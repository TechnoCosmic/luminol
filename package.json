{
    "name": "luminol",
    "displayName": "Luminol",
    "description": "Code Highlighter",
    "author": "Dirk Mahoney",
    "publisher": "Techno Cosmic Research Institute",
    "version": "0.0.4",
    "engines": {
        "vscode": "^1.77.0"
    },
    "categories": [
        "Formatters",
        "Themes",
        "Other"
    ],
    "activationEvents": [
        "activate"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Luminol",
            "properties": {
                "luminol.soleHighlightColor": {
                    "type": "string",
                    "default": "#FF8000",
                    "description": "The highlight color for the sole matching string"
                },
                "luminol.highlightColor": {
                    "type": "string",
                    "default": "#00FF00",
                    "description": "The highlight color for matching strings"
                },
                "luminol.dimColor": {
                    "type": "string",
                    "default": "#606060",
                    "description": "The color for non-matching strings"
                },
                "luminol.selectMatching": {
                    "type": "boolean",
                    "default": false,
                    "description": "Select all matching strings as well as highlighting them"
                }
            }
        },
        "commands": [
            {
                "command": "luminol.toggleHighlight",
                "title": "Luminol: Toggle Highlights"
            },
            {
                "command": "luminol.highlightSelection",
                "title": "Luminol: Highlight Selection"
            },
            {
                "command": "luminol.clearHighlights",
                "title": "Luminol: Clear Highlights"
            },
            {
                "command": "luminol.movePrevMatch",
                "title": "Luminol: Move to Previous Match"
            },
            {
                "command": "luminol.moveNextMatch",
                "title": "Luminol: Move to Next Match"
            },

            {
                "command": "luminol.extractFunction",
                "title": "Luminol: Extract Function"
            },
            {
                "command": "luminol.clearLine",
                "title": "Luminol: Clear Current Line"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.77.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "eslint": "^8.18.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "@vscode/test-electron": "^2.1.5"
    }
}